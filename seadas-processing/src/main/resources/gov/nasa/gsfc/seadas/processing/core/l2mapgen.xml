            <alias>--help</alias>
        </option>
        <option type="help">
            <name>-version</name>
            <value>false</value>
            <type>bool</type>
            <default>false</default>
            <description>print the version
                information
            </description>
            <source>default</source>
            <alias>--version</alias>
        </option>
        <option type="help">
            <name>-dump_options</name>
            <value>false</value>
            <type>bool</type>
            <default>false</default>
            <description>print
                information about each option
            </description>
            <source>default</source>
            <alias>--dump_options</alias>
        </option>
        <option type="help">
            <name>-dump_options_paramfile</name>
            <value/>
            <type>string</type>
            <description>print
