<option_list>
    <option>
        <name>ifile</name>
        <value></value>
        <type>string</type>
        <description>input MODIS L1A datafile</description>
        <source>command line</source>
        <alias>ifile1</alias>
    </option>
    <option>
        <name>spixl</name>
        <value>1</value>
        <type>int</type>
        <default>1</default>
        <description>start pixel number</description>
    </option>
    <option>
        <name>epixl</name>
        <value>-1</value>
        <type>int</type>
        <default>-1</default>
        <description>end pixel number (-1=the last pixel)</description>
    </option>
    <option>
        <name>sline</name>
        <value>1</value>
        <type>int</type>
        <default>1</default>
        <description>start line number</description>
    </option>
    <option>
        <name>eline</name>
        <value>-1</value>
        <type>int</type>
        <default>-1</default>
        <description>end line number (-1=the last line)</description>
    </option>
    <option>
        <name>ofile</name>
        <value></value>
        <type>string</type>
        <default>output</default>
        <description>output L2 file name</description>
        <alias>ofile1</alias>
    </option>
</option_list>